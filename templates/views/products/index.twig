{% extends 'layouts/base.twig' %}

{% block main_content %}
<div class="m-12">
	<h2>All Products:</h2>
	<p>This is coming from view/products/index</p>
	<ul>
		{% for product in products %}
			<li>
				{{ product.title }} ${{ product.price }} - 
				<a href="/products/{{ product.id }}/edit">Edit</a> | <a href="/products/{{ product.id }}/delete">Delete</a>
			</li>
		{% endfor %}
	</ul>
	<a href="/products/new">Create New CD</a>
</div>
{% endblock %}