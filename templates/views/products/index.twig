{% extends 'layouts/base.twig' %}

{% block main_content %}
    <h2>All Products:</h2>
    <ul>
        {% for product in products %}
            <li>
                {{ product.name }} -
                <a href="/products/{{ product.id }}">Edit</a>
                <a href="/products/{{ product.id }}/delete">Delete</a>
                <a href="/products/new">Create New Product</a>
                {# <a href="/products/{{ product.id }}/new">Create New Product</a> #}
            </li>
        {% endfor %}
    </ul>
{% endblock %}