<form method="POST" action="/products/{% if product.id %}{{ product.id }}{% endif %}">
	{% if product.id %}
		<input type="hidden" name="id" value="{{ product.id }}">
	{% endif %}
	<div>
		<label>Title:</label>
		<br />
		<input type="text" name="title" id="title" value="{{ product.title }}" />
	</div>
	<div>
		<label>Slug:</label>
		<br />
		<input type="text" name="slug" id="slug" value="{{ product.slug }}" />
	</div>
	<div>
		<label>Price:</label>
		<br />
		<input type="text" name="price" id="price" value="{{ product.price }}" />
	</div>
	<div>
		<label>Is Published?</label>
		<input type="checkbox" name="is_published" id="is_published" value="true" {% if product.is_published %}checked="checked"{% endif %} />
	</div>
	<div>
		<label>Product Description:</label><br />
		{# <textarea type="text" name="description" id="description">{{ product.description }}</textarea> #}
		<textarea rows="10" cols="50" name="description" id="description">{{ product.description }}</textarea>
	</div>
	<div>
		<input type="submit" type="submit" />
	</div>
</form>