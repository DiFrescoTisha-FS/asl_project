{% extends 'layouts/base.twig' %}

{% block content %}
    <h2>All Images</h2>
    <ul>
        {% for image in images %}
        <li>
            {{ image.id }} -
            <a href="/images/{{ image.id }}">View</a>
            <a href="/images/{{ image.id }}/edit">Edit</a>
            <a href="/images/{{ image.id }}/delete">Delete</a>
        </li>
        {% endfor %}
    </ul>

    <a href="/images/new">Create New Image</a>
{% endblock %}