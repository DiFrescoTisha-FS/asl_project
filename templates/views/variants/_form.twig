<form method="POST" action="/variants/{% if variants.id %}{{ variants.id }}{% endif %}">
	{% if variants.id %}
		<input type="hidden" name="id" value="{{ variants.id }}">
	{% endif %}
	<div>
		<label class="font-bold">Title:</label>
		<br />
		<input class="border-2 border-gray-200 rounded-lg m-2" type="text" name="title" id="title" value="{{ variants.title }}" />
	</div>
	<div>
		<label class="font-bold" htmlFor="slug">Slug:</label>
		<br />
		<input class="border-2 border-gray-200 rounded-lg m-2" type="text" name="slug" id="slug" value="{{ variants.slug }}" />
	</div>
	<div>
		<label class="font-bold" htmlFor="price">Price:</label>
		<br />
		<input class="border-2 border-gray-200 rounded-lg m-2" type="text" name="price" id="price" value="{{ variants.price }}" />
	</div>
	<div>
		<label class="font-bold" htmlFor="inventory">Available Inventory:</label>
		<br />
		<input class="border-2 border-gray-200 rounded-lg m-2" type="text" name="inventory" id="inventory" value="{{ variants.inventory }}" />
	</div>
	<div>
		<label><strong>Product:</strong></label>
		<br />
		<select name = "productId">
			{% for product in products %}
				<option value="{{ product.id }}">{{ product.title }}
				<option value="{{ product.id }}" {% if product.id == variants.productId %}{% endif %}>{{ product.title }}
				</option>
			{% endfor %}
		</select>
	</div>
	<div>
		<label class="font-bold" htmlFor="description">Variant Description:</label><br />
				<textarea class="border-2 border-gray-200 rounded-lg m-2" name="description" id="description">{{ variants.description }}</textarea>
		{# <textarea rows="10" cols="50" name="description" id="description">{{ variants.description }}</textarea> #}
	</div>
	<div>
		<input class="border-2 border-purple-400 bg-black rounded-sm text-purple-400 m-2 p-2" type="submit" type="submit" />
	</div>
</form>