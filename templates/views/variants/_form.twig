<form method="POST" action="/variants/{% if variants.id %}{{ variants.id }}{% endif %}">
	{% if variants.id %}
		<input type="hidden" name="id" value="{{ variants.id }}">
	{% endif %}
	<div>
		<label>Title:</label>
		<br />
		<input type="text" name="title" id="title" value="{{ variants.title }}" />
	</div>
	<div>
		<label>Slug:</label>
		<br />
		<input type="text" name="slug" id="slug" value="{{ variants.slug }}" />
	</div>
	<div>
		<label>Price:</label>
		<br />
		<input type="text" name="price" id="price" value="{{ variants.price }}" />
	</div>
	<div>
		<label for="inventory">Available Inventory:</label>
		<br />
		<input type="text" name="inventory" id="inventory" value="{{ variants.inventory }}" />
	</div>
	<div>
		<label>Product:</label>
		<br />
		<select name = "productId">
			{% for product in products %}
				<option value="{{ product.id }}">{{ product.title }}
				<option value="{{ product.id }}" {% if product.id === variants.productId %}{% endif %}>{{ product.title }}
				</option>
			{% endfor %}
		</select>
	</div>
	<div>
		<label for="description">Variant Description:</label><br />
		<textarea rows="10" cols="50" name="description" id="description">{{ variants.description }}</textarea>
	</div>
	<div>
		<input type="submit" type="submit" />
	</div>
</form>